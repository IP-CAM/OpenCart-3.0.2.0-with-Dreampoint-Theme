{% if banners %}
<div class="simple-gallery-box">
<h3>{{ heading_title }}</h3>
<div class="simple-gallery row">
{% for banner in banners %}
  <div class="col-sm-4 col-xs-12 text-center">
    {% if banner.link %}
		  <a class="simple-gallery-link" href="{{ banner.link }}" title="{{ banner.title }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>
	  {% else %}
      <a class="simple-gallery-popup" href="{{ banner.original }}" title="{{ banner.title }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="img-responsive" /></a>
	  {% endif %}
  </div>
{% endfor %}
</div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
	$('.simple-gallery-popup').magnificPopup({
		type:'image',
		gallery: {
			enabled: true
		}
	});
});
//--></script>
{% endif %}